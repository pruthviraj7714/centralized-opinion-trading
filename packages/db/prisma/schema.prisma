generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id             String     @id @default(uuid())
  username       String     @unique
  email          String
  password       String
  balance        Decimal    @default(1000000) @db.Decimal(18, 6)
  role           Role
  trades         Trade[]
  position       Position[]
  createdMarkets Market[]
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt
}

model Market {
  id              String       @id @default(uuid())
  opinion         String
  description     String
  status          MarketStatus @default(OPEN)
  expiryTime      DateTime
  resolvedOutcome Outcome?

  feePercent Decimal    @default(0.3) @db.Decimal(5, 2)
  yesPool    Decimal    @db.Decimal(18, 6)
  noPool     Decimal    @db.Decimal(18, 6)
  positions  Position[]
  trades     Trade[]
  userId     String
  user       User       @relation(fields: [userId], references: [id])
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
}

model Position {
  id       String @id @default(uuid())
  userId   String
  user     User   @relation(fields: [userId], references: [id])
  marketId String
  market   Market @relation(fields: [marketId], references: [id])

  yesShares Decimal @default(0) @db.Decimal(18, 6)
  noShares  Decimal @default(0) @db.Decimal(18, 6)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, marketId])
}

model Trade {
  id       String @id @default(uuid())
  userId   String
  user     User   @relation(fields: [userId], references: [id])
  marketId String
  market   Market @relation(fields: [marketId], references: [id])

  side      Outcome
  action    Action
  amountIn  Decimal @db.Decimal(18, 6) //amount user paid
  amountOut Decimal @db.Decimal(18, 6) //tokens recieved
  price     Decimal @db.Decimal(18, 6) //execution price

  createdAt DateTime @default(now())

  @@index([userId])
  @@index([marketId])
}

model PlatformFee {
  id        String   @id @default(uuid())
  marketId  String
  amount    Decimal  @db.Decimal(18, 6)
  createdAt DateTime @default(now())
}

enum Role {
  USER
  ADMIN
}

enum MarketStatus {
  OPEN
  CLOSED
  RESOLVED
}

enum Outcome {
  YES
  NO
}

enum Action {
  BUY
  SELL
}
